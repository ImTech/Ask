<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dock_item_height" >

    <LinearLayout
        android:id="@+id/dockBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dock_item_margin_top"
        android:background="@drawable/bg_title"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dockBtn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="最新资讯"
            android:textSize="9sp" />

        <Button
            android:id="@+id/dockBtn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="问答社区"
            android:textSize="9sp" />

        <View
            android:id="@+id/dockPlaceHolder"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/dockBtn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="查看消息"
            android:textSize="9sp" />

        <Button
            android:id="@+id/dockBtn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="个人中心"
            android:textSize="9sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/dockBtnCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_question" />

</FrameLayout>