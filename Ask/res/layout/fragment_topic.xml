<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:TitleIndicator="http://schemas.android.com/apk/res/com.imtech.ask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <com.imtech.ask.view.TitleIndicator
        android:id="@+id/title_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        TitleIndicator:indicatorTextColor="#ffffff"
        TitleIndicator:indicatorTextSize="10sp"
        TitleIndicator:normalDrawable="@drawable/bg_indector_normal"
        TitleIndicator:selectDrawable="@drawable/bg_indicator_select"
        android:background="@null" />

    <com.imtech.ask.view.pull2refresh.PullToRefreshListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@null"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="4dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:padding="4dp"
        android:scrollbars="none"
        android:smoothScrollbar="true" />

</LinearLayout>